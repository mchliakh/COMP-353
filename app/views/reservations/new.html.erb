<%- model_class = Reservation -%>
<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.new', :model => model_class.model_name.human,
                                 :default => "New #{model_class.model_name.human}") %></h1>
</div>
<div id="client_info" class="span12">
    <h3>1. Select a client</h3>
    <br />
    <%= render :partial => 'clients/info',:locals => {:clients => @clients} %>
</div>
<div id="reservation_info" class="span6">
    <h3>2. Create a reservation</h3>
    <br />
    <%= render :partial => 'form' %>
</div>
<div id="mission_info" class="span6">
    <h3>3. Add missions</h3>   
    <% @mission = Mission.new %>
    <%= render :partial => 'missions/form' %>
    <div>
        <ul id="missions_list">
        </ul>
    </div> 
</div>
