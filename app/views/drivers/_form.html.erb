<%= form_for @driver, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :person_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :person_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :license_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :license_type, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                drivers_path, :class => 'btn' %>
  </div>
<% end %>
