<%- model_class = Cost -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:truck_type_id) %>:</strong></dt>
  <dd><%= @cost.truck_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cost_type_id) %>:</strong></dt>
  <dd><%= @cost.cost_type_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amt) %>:</strong></dt>
  <dd><%= @cost.amt %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              costs_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cost_path(@cost), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cost_path(@cost),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
