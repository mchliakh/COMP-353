<%- model_class = Mission -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:invoice_id) %></th>
      <th><%= model_class.human_attribute_name(:driver_id) %></th>
      <th><%= model_class.human_attribute_name(:truck_id) %></th>
      <th><%= model_class.human_attribute_name(:expected_start_time) %></th>
      <th><%= model_class.human_attribute_name(:expected_end_time) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @missions.each do |mission| %>
      <tr>
        <td><%= link_to mission.id, mission_path(mission) %></td>
        <td><%= mission.invoice_id %></td>
        <td><%= mission.driver_id %></td>
        <td><%= mission.truck_id %></td>
        <td><%= mission.expected_start_time %></td>
        <td><%= mission.expected_end_time %></td>
        <td><%=l mission.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_mission_path(mission), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      mission_path(mission),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_mission_path,
            :class => 'btn btn-primary' %>
