<%= form_for @mission, :html => { :class => 'form-horizontal' }, :remote => true do |f| %>
  <div class="control-group">
    <%= f.label :driver_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:mission, :driver_id, Driver.all, :id, :full_name) %>       
    </div>
  </div>
  <div class="control-group">
    <%= f.label :truck, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:mission, :truck_id, Truck.all, :id, :truck_type_name) %>       
    </div>
  </div>
  <div class="control-group">
    <%= f.label :expected_start_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :expected_start_time, :class => 'datetime_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :expected_end_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :expected_end_time, :class => 'datetime_select' %>
    </div>
  </div>
  <%= hidden_field_tag 'mission[reservation_id]', @reservation.id unless @reservation.nil? %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>    
  </div>
<% end %>
