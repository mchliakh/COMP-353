<%= form_for @invoice, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :reservation, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select(:invoice, :reservation_id, @reservations, :id, :description) %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
    <table class="table table-condensed">
      <thead>
        <tr>
          <th>Cost</th>
          <th>TPS</th>
          <th>TVQ</th>
          <th>Total Cost</th>    
          <th>Remaining</th>    
        </tr>
      </thead>
      <tbody>
        <tr>
          <td>100.00$</td>
          <td>10.00$</td>
          <td>10.00$</td>
          <td>120.00$</td>
          <td>120.00$</td>
        </tr>
      </tbody>
    </table>
    </div>
  </div>
<% end %>
<% @payment = Payment.new %>
<% @payment.invoice_id = @invoice.id %>
<%= render :partial => 'payments/form' %>

