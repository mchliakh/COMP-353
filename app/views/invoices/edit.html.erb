<%- model_class = Invoice -%>
<div class="page-header">
  <h1><%=t '.title', :default => t('helpers.titles.edit', :model => model_class.model_name.human,
                                   :default => "Edit #{model_class.model_name.human}") %></h1>
</div>
<%= render :partial => 'form' %>

<% @payment = Payment.new %>
<% @payment.invoice_id = @invoice.id %>
<%= render :partial => 'payments/form' %>
 <div>
    <ul id="payments_list">
       <% @invoice.payments.each do |p| %>
       <%= render :partial => 'payments/item_list', :locals => {:payment => p} %>
       <% end %>
    </ul>
</div> 
